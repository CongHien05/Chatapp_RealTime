<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.danbainoso.client.ui.GroupController"
      alignment="CENTER"
      spacing="28"
      style="-fx-background-color: linear-gradient(to bottom right, #fafafa, #f2f2f2);">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <children>

        <!-- Title -->
        <Label text="✨ Tạo nhóm mới"
               textAlignment="CENTER"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

        <!-- Card -->
        <VBox spacing="16"
              style="-fx-background-color: white;
                     -fx-background-radius: 14;
                     -fx-padding: 24;
                     -fx-min-width: 420;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 12, 0, 0, 4);">

            <children>

                <Label text="Tên nhóm:"
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #444;"/>
                <TextField fx:id="groupNameField"
                           promptText="Nhập tên nhóm"
                           style="-fx-background-radius: 8; -fx-padding: 8;"/>

                <Label text="Mô tả:"
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #444;"/>

                <TextArea fx:id="descriptionField"
                          prefHeight="140"
                          wrapText="true"
                          promptText="Nhập mô tả nhóm (tùy chọn)"
                          style="-fx-background-radius: 8; -fx-padding: 10;"/>
            </children>

        </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="14">

            <Button fx:id="createButton"
                    text="✔ Tạo nhóm"
                    onAction="#handleCreate"
                    style="-fx-background-color: #2196f3;
                           -fx-text-fill: white;
                           -fx-background-radius: 10;
                           -fx-padding: 8 16;
                           -fx-font-weight: bold;"/>

            <Button fx:id="cancelButton"
                    text="Hủy"
                    onAction="#handleCancel"
                    style="-fx-background-color: #bdbdbd;
                           -fx-text-fill: white;
                           -fx-background-radius: 10;
                           -fx-padding: 8 16;"/>

        </HBox>

    </children>

</VBox>
