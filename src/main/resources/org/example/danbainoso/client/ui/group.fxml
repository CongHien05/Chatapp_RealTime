<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.danbainoso.client.ui.GroupController"
      alignment="CENTER"
      spacing="28"
      styleClass="dialog-background">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <children>

        <Label text="✨ Tạo nhóm mới"
               textAlignment="CENTER"
               styleClass="dialog-title"/>

        <VBox spacing="16"
              styleClass="card"
              minWidth="420">

            <children>

                <Label text="Tên nhóm:"
                       styleClass="form-label"/>

                <TextField fx:id="groupNameField"
                           promptText="Nhập tên nhóm"/>

                <Label text="Mô tả:"
                       styleClass="form-label"/>

                <TextArea fx:id="descriptionField"
                          prefHeight="140"
                          wrapText="true"
                          promptText="Nhập mô tả nhóm (tùy chọn)"/>
            </children>

        </VBox>

        <HBox alignment="CENTER" spacing="14">

            <Button fx:id="createButton"
                    text="✔ Tạo nhóm"
                    onAction="#handleCreate"
                    styleClass="button-primary"/>

            <Button fx:id="cancelButton"
                    text="Hủy"
                    onAction="#handleCancel"
                    styleClass="button-secondary"/>

        </HBox>

    </children>

</VBox>