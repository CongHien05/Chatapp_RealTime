<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/javafx/17.0.2-ea" fx:controller="org.example.danbainoso.client.ui.ChatController">
   <left>
      <VBox spacing="10" style="-fx-background-color: #f0f0f0;">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Danh bạ" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Separator />
            <Label text="Liên hệ" />
            <ListView fx:id="contactsList" prefHeight="200.0" prefWidth="200.0" />
            <Label text="Nhóm" />
            <ListView fx:id="groupsList" prefHeight="200.0" prefWidth="200.0" />
            <Button fx:id="createGroupButton" mnemonicParsing="false" text="Tạo nhóm mới" />
            <Button fx:id="manageFriendsButton" mnemonicParsing="false" text="Quản lý bạn bè" />
         </children>
      </VBox>
   </left>
   <center>
      <VBox spacing="10">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" spacing="10">
               <children>
                  <Label fx:id="currentChatLabel" text="Chọn một cuộc trò chuyện" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Button fx:id="addFriendButton" mnemonicParsing="false" text="Kết bạn" visible="false" />
                  <Button fx:id="blockButton" mnemonicParsing="false" text="Chặn" visible="false" managed="false" />
                  <Button fx:id="groupSettingsButton" mnemonicParsing="false" text="Cài đặt nhóm" visible="false" managed="false" />
                  <Button fx:id="leaveGroupButton" mnemonicParsing="false" text="Rời nhóm" visible="false" managed="false" />
               </children>
            </HBox>
            <Separator />
           <ScrollPane fx:id="messagesScrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="messagesContainer" spacing="12" prefWidth="600.0" />
               </content>
           </ScrollPane>
            <HBox spacing="10" alignment="CENTER_LEFT">
               <children>
                  <TextField fx:id="messageField" prefWidth="500.0" promptText="Nhập tin nhắn..." />
                  <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendMessage" text="Gửi" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>

